<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <walk.around.view.DirectionsListView
        android:id="@+id/directions_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/stub1"
        android:groupIndicator="@null"
        android:orientation="vertical"
        android:paddingLeft="@dimen/directions_left_padding"
        android:paddingRight="@dimen/directions_right_padding"/>

    <View
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_above="@+id/foursquare_logo"
        android:id="@+id/stub1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/button_divider" />

    <ImageView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/foursquare_logo"
        android:src="@drawable/powered_by_foursquare_gray"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent" />

</RelativeLayout>
